{
  "name": "saya",
  "version": "1.0.0",
  "description": "saya",
  "main": "resources/cli.js",
  "bin": {
    "saya": "resources/cli.js"
  },
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "scripts": {
    "dev": "shadow-cljs start && shadow-cljs watch :cli",
    "cli": "node resources/cli.js",
    "start": "shadow-cljs start",
    "stop": "shadow-cljs stop",
    "build:release": "shadow-cljs release :cli",
    "check": "pnpm lint && pnpm test",
    "lint": "clojure -Sdeps '{:deps {clj-kondo/clj-kondo {:mvn/version \"2025.01.17-SNAPSHOT\"}}}' -M -m clj-kondo.main --lint src --config .clj-kondo/config.edn",
    "old:clojure": "clojure -Sdeps '{:deps {antq/antq {:mvn/version \"RELEASE\"}}}' -m antq.core",
    "old": "pnpm old:clojure; pnpm outdated",
    "clean": "rm -rf resources/public/js/* && rm -rf target",
    "test:node:old": "shadow-cljs compile ci-node && node target/ci-node.js",
    "test:node": "shadow-cljs compile ci-node && FORCE_COLOR=3 node target/ci/saya.ci.js",
    "test": "pnpm test:node"
  },
  "keywords": [
    "shadow-cljs",
    "reagent"
  ],
  "author": "Daniel Leong",
  "license": "MIT",
  "devDependencies": {
    "shadow-cljs": "^2.28.20",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "ansi-escapes": "^7.0.0",
    "ansi-parser": "^3.2.11",
    "ansi-regex": "^6.1.0",
    "env-paths": "^3.0.0",
    "figures": "^3.2.0",
    "highlight.js": "11.0.1",
    "ink": "^6.5.1",
    "ink-spinner": "^5.0.0",
    "ink-use-stdout-dimensions": "^1.0.5",
    "react": "^19",
    "react-dom": "^19",
    "split2": "^4.2.0",
    "string-width": "^7.2.0",
    "strip-ansi": "^7.1.0",
    "untildify": "^5.0.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "ink": "patches/ink.patch"
    },
    "overrides": {
      "elliptic@<=6.6.0": ">=6.6.1",
      "pbkdf2@<=3.1.2": ">=3.1.3",
      "pbkdf2@>=3.0.10 <=3.1.2": ">=3.1.3",
      "sha.js@<=2.4.11": ">=2.4.12",
      "cipher-base@<=1.0.4": ">=1.0.5",
      "elliptic@<6.6.0": ">=6.6.0"
    }
  }
}
